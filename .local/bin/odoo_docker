#!/bin/bash

version=16

usage(){
  printf "usage: odoo_docker [options]\\n  --: Run Odoo in Docker\\n  -u: <MODULE>: Run Odoo in Docker with module update\\n  -v: <VERSION>: Run a specific version of Odoo\\n  -h: Show help message\\n"
}

while getopts "u:v:h" o; do case "${o}" in
    h) usage && exit 1;;
    u) update=${OPTARG} ;;
    v) version=${OPTARG} ;;
    *) printf "Invalid option: -%s\\n -h: To show help\\n" "$OPTARG" && exit 1 ;;
esac done

COMPOSE_FILE=~/Documents/odoo/"$version"/docker-compose.yml
if [[ -n $update ]]; then
    sed -i '/command: odoo*/s/'odoo.*'/'"odoo -u $update"'/' "$COMPOSE_FILE"
else
    sed -i '/command: odoo*/s/'odoo.*'/'"odoo"'/' "$COMPOSE_FILE"
fi
sudo docker compose -f "$COMPOSE_FILE" up -d --force-recreate
