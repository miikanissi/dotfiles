#!/bin/bash

version=16

usage(){
  printf "usage: odoo_logs [options]\\n  --: Run Odoo in Docker\\n  -v: <VERSION>: Run a specific version of Odoo\\n  -h: Show help message\\n"
}

while getopts "v:h" o; do case "${o}" in
    h) usage && exit 1;;
    v) version=${OPTARG} ;;
    *) printf "Invalid option: -%s\\n -h: To show help\\n" "$OPTARG" && exit 1 ;;
esac done

sudo docker logs -f --tail=500 odoo"$version" 2>&1 | multitail -cS python-log -j -f
