#!/bin/bash

ODOO_VERSION=16

usage() {
	printf "usage: odoo-docker [options]\\n  --: Run Odoo in Docker\\n  -u: <MODULE>: Run Odoo in Docker with module update\\n  -V: <VERSION>: Run a specific version of Odoo\\n  -h: Show help message\\n  -v: Show current odoo-docker version\\n"
}
version() {
	printf "odoo-docker 0.1.0"
}

while getopts "hvu:V:" o; do
	case "${o}" in
	h) usage && exit 1 ;;
	v) version && exit 1 ;;
	u) UPDATE=${OPTARG} ;;
	V) ODOO_VERSION=${OPTARG} ;;
	*) printf "Invalid option: -%s\\n -h: To show help\\n" "$OPTARG" && exit 1 ;;
	esac
done

COMPOSE_FILE=~/Documents/odoo/"$ODOO_VERSION"/docker-compose.yml

if [[ -n $UPDATE ]]; then
	sed -i '/command: odoo*/s/'odoo.*'/'"odoo --dev all -u $UPDATE"'/' "$COMPOSE_FILE"
else
	sed -i '/command: odoo*/s/'odoo.*'/'"odoo --dev all"'/' "$COMPOSE_FILE"
fi

sudo docker compose -f "$COMPOSE_FILE" up -d --force-recreate
