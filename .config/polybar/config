[module/cputemp]
type = custom/script
exec = .local/bin/cputemp.sh
interval = 10
click-left = rxvt -e htop

format-prefix = "ï‹› "
format-prefix-foreground = ${colors.primary}

[module/weather_icon]
type = custom/script
exec = .local/bin/weather.sh
interval = 60
label-foreground = ${colors.primary}

format-padding = 0
format = <label>
format-font = 4
label = %output:0:1%
click-right = .local/bin/weather_updated.sh

[module/weather]
type = custom/script
exec = .local/bin/weather.sh | awk '{print " "$2, $3}'
interval = 60

format-padding = 0
format = <label>
label-padding-right = 3
label = %output%

click-left = sxiv .local/share/weather.png
click-right = .local/bin/weather_updated.sh

[module/date]
type = internal/date
interval = 5
date-alt = " %Y-%m-%d"

time = %I:%M%p
time-alt = %H:%M:%S

format-prefix = "ï€—"
format-prefix-foreground = ${colors.primary}
label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_0c_00.4.analog-stereo

format-volume = <label-volume>
format-volume-prefix = "ï€¨ "
format-volume-prefix-foreground = ${colors.primary}
label-volume = %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = ï€¦ muted
label-muted-foreground = #666

click-right = pavucontrol &

[module/network]
type = custom/script
exec = .local/bin/check_connection.sh
interval = 1
click-left = nm-connection-editor
format-foreground = ${colors.primary}

[module/battery]
type = internal/battery
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT1
poll-interval = 5

time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%

; Only applies if <ramp-capacity> is used
ramp-capacity-0 = ï‰„
ramp-capacity-1 = ï‰ƒ
ramp-capacity-2 = ï‰‚
ramp-capacity-3 = ï‰
ramp-capacity-4 = ï‰€

; Only applies if <bar-capacity> is used
bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-0 = ï‰„
animation-charging-1 = ï‰ƒ
animation-charging-2 = ï‰‚
animation-charging-3 = ï‰
animation-charging-4 = ï‰€
; Framerate in milliseconds
animation-charging-framerate = 750

; Only applies if <animation-discharging> is used
animation-discharging-0 = ï‰€
animation-discharging-1 = ï‰
animation-discharging-2 = ï‰‚
animation-discharging-3 = ï‰ƒ
animation-discharging-4 = ï‰„
; Framerate in milliseconds
